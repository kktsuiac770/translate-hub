{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "PORT": "8080",
                "DB_URL": "postgres://postgres:postgres@localhost:5432/translatehub?sslmode=disable",
                "GOOGLE_APPLICATION_CREDENTIALS": "${workspaceFolder}/../credentials.json"
            },
            "args": [],
            "showLog": true,
            "buildFlags": "-tags=dev"
        },
        {
            "name": "Debug Current Test File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "showLog": true,
            "buildFlags": "-tags=dev"
        },
        {
            "name": "Debug Task Handler Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/api/handlers",
            "args": ["-test.run", "TestTask"],
            "showLog": true
        },
        {
            "name": "Debug with Race Detection",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "PORT": "8080",
                "DB_URL": "postgres://postgres:postgres@localhost:5432/translatehub?sslmode=disable"
            },
            "args": [],
            "buildFlags": "-race"
        }
    ]
}
